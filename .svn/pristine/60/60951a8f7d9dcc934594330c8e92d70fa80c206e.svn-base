<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ContainHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/pad_2dp"
        android:background="@color/amber_700"
        android:padding="@dimen/pad_2dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtSubject"
            style="@style/font2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/subjectE"
            android:textColor="@color/colorH"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contain_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/contain_calendar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_2dp"
            android:orientation="vertical"
            android:padding="@dimen/pad_2dp">

            <TextView
                style="@style/font2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subjectE"
                android:textColor="@color/colorA"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contain_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/contain_header"
            android:background="@color/colorH"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/pad_5dp">

            <RelativeLayout
                android:id="@+id/contentdata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_medium">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/label_exercise"/>

                    <TextView
                        android:id="@+id/txt_exam"
                        style="@style/font3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="@dimen/margin_small"
                        android:text="0" />

                    <TextView
                        style="@style/font9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="@string/item" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/label_answer_true" />

                    <TextView
                        android:id="@+id/txt_answer_true"
                        style="@style/font3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="@dimen/margin_small"
                        android:text="0" />

                    <TextView
                        style="@style/font9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="@string/item"
                        android:id="@+id/textView4" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line2"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/label_answer_wrong"
                        android:id="@+id/textView5" />

                    <TextView
                        android:id="@+id/txt_answer_wrong"
                        style="@style/font3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="@dimen/margin_small"
                        android:text="0" />

                    <TextView
                        style="@style/font9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="@string/item"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line3"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/label_donot" />

                    <TextView
                        android:id="@+id/txt_notdo_homework"
                        style="@style/font3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="@dimen/margin_small"
                        android:text="0" />

                    <TextView
                        style="@style/font9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="@string/item"
                        android:id="@+id/textView6" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>