<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorH"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/pad_15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/img_content"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_chapter" />

            <ImageView
                android:id="@+id/check_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/check_sm"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/pad_15dp">

            <TextView
                android:id="@+id/textView"
                style="@style/font2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/semeter"
                android:textColor="@color/navigation_items"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                style="@style/font2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/semeter"
                android:textColor="@color/navigation_items"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView3"
                style="@style/font2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/semeter"
                android:textColor="@color/navigation_items"
                android:textStyle="normal" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>