<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorH"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/pad_15dp">

    <TextView
        android:id="@+id/txtNameChapter"
        style="@style/font2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:paddingLeft="@dimen/pad_2dp"
        android:text="@string/charpter"
        android:textColor="@color/colorA"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/Contain_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_transpaent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/img_content"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_chapter" />

                <ImageView
                    android:id="@+id/check_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/check_sm"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/pad_5dp">

                <TextView
                    android:id="@+id/text_question"
                    style="@style/font2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/navigation_items"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rdoBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/pad_20dp">

            <RadioButton
                android:id="@+id/radio_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_description"
                android:textColor="@color/colorC"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_description"
                android:textColor="@color/colorC"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_description"
                android:textColor="@color/colorC"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_description"
                android:textColor="@color/colorC"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_description"
                android:textColor="@color/colorC"
                android:textSize="15sp" />

        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/BTN_SEND"
        style="@style/btn_white_large"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/pad_5dp"
        android:background="@drawable/footer_button_orange"
        android:text="@string/send"
        android:textColor="@color/white" />
</LinearLayout>